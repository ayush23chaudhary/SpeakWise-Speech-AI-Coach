# Backend Environment Variables Template
# Copy this to .env.production and fill in your values

# MongoDB Connection
MONGODB_URI=your_mongodb_atlas_connection_string_here

# JWT Secret (minimum 32 characters)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# Session Secret for OAuth
SESSION_SECRET=your_session_secret_key_for_oauth_minimum_32_characters

# OAuth 2.0 Credentials

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:5001/api/auth/github/callback

# Client URL for OAuth redirects
CLIENT_URL=http://localhost:3001

# Google Cloud Credentials (Base64 encoded)
GOOGLE_CREDENTIALS_BASE64=base64_encoded_credentials_here

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=5001
NODE_ENV=production

# CORS Configuration (Your frontend URL)
CORS_ORIGIN=https://your-app.vercel.app

# Optional: Additional configurations
MAX_FILE_SIZE=10485760
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
